// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  title String
  desc String
  color String
  img String
  slug String @unique
  products Product[]
}

model Product {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  title String @unique
  desc String
  img String?
  price Decimal
  isFeatured Boolean @default(false)
  options Json[]
  category Category @relation(fields: [catSlug], references: [slug])
  catSlug String
  productImgs Productimage[]
  productDescs Productdescription[]
}

model Productimage {
  id String @id @default(cuid())
  img String
  product Product @relation(fields: [titleSlug], references: [title])
  titleSlug String
}

model Productdescription {
  id String @id @default(cuid())
  desc String
  product Product @relation(fields: [titleSlug], references: [title])
  titleSlug String
}

model AboutMe {
  id String @id @default(cuid())
  classification String
  title String
  detail String
}

model AboutSkill {
  id String @id @default(cuid())
  classification String
  priority Decimal?
  title String
  image String?
  url String?
  isDisplayed Boolean @default(true)
}

model AboutInterest {
  id String @id @default(cuid())
  priority Decimal
  title String
  logo String?
}

model ResumeData {
  id String @id @default(cuid())
  classification String
  title String @unique
  detail String?
  resumeDataDesc ResumeDataDescription[]
}

model ResumeDataDescription {
  id String @id @default(cuid())
  period String?
  location String?
  thesis Boolean
  desc String
  resumeData ResumeData @relation(fields: [titleSlug], references: [title])
  titleSlug String
}
